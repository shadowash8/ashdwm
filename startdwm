#!/bin/sh
# Inherit vars
. ~/.shellprofile
export PATH="$HOME/.ashdwm/scripts:$PATH"

# ENV Vars
export QT_QPA_PLATFORM="xcb"
export QT_QPA_PLATFORMTHEME="qt6ct"
export XDG_CURRENT_DESKTOP=AshDWM

setxkbmap us -variant colemak_dh 
~/.ashdwm/autostart.sh

while :; do
    dwm 2> ~/.dwm.log || break
done
